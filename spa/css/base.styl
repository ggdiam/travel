@import "vars.styl"
$fa-font-path = "../libs/font-awesome-stylus/fonts"
@import "../libs/bootstrap-stylus/stylus/bootstrap.styl"
@import "../libs/font-awesome-stylus/stylus/index.styl"
@import "nav.styl"
@import "spinner"

html{
    position: relative;
    min-height: 100%;
}
body{
    margin-bottom: 60px;
}
.footer{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60px;
    background-color: #000;
}
.container-content{
    position relative
    z-index 2
    height 100%
    padding-top 51px
    background #fff
}
.container .text-muted{
    margin: 20px 0;
}
.footer > .container{
    padding-right: 15px;
    padding-left: 15px;
}
code{
    font-size: 80%;
}
a{
    outline none !important
}