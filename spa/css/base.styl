@import "vars.styl"
$fa-font-path = "../../libs/font-awesome-stylus/fonts"
@import "../../libs/bootstrap-stylus/stylus/bootstrap.styl"
@import "../../libs/font-awesome-stylus/stylus/index.styl"
@import "nav.styl"



html{
    position: relative;
    min-height: 100%;
}
body{
    margin-bottom: 60px;
}
.footer{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60px;
    background-color: #000;
}
.container-content{
    height 100%
    padding-top 60px
}
.container .text-muted{
    margin: 20px 0;
}
.footer > .container{
    padding-right: 15px;
    padding-left: 15px;
}
code{
    font-size: 80%;
}
a{
    outline none !important
}
    

.container-content.ng-enter, .container-content.ng-leave{
    transition: opacity .3s ease-in;
}
.container-content.ng-enter, .container-content.ng-leave.ng-leave-active{
    opacity: 0;
}
.container-content, .container-content.ng-enter.ng-enter-active{
    opacity: 1;
}