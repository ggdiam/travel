doctype html
html(xmlns:ng="https://angularjs.org" ng-app="app")
    head
        include ./head.jade
        include ./styles.jade
    body(layout="column" ng-controller="AppController")
        md-toolbar(layout="row")
            button(ng-click="toggleSidenav('left')" hide-gt-sm class="menuBtn")
                span(class="visually-hidden") 
                    | Menu
            h1(class="md-toolbar-tools" layout-align-gt-sm="center") Hello World
        div(layout="row" flex)
            md-sidenav(layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')")
            div(layout="column" flex id="content")
                md-content(layout="column" flex class="md-padding")

        //.page-container(ui-view="root" ng-cloak)
        //.overlay(ng-if="loading" ng-include="'balloon/tpl/index.html'")    
        .spinner.spinner-load-page(ng-include="'spinner/tpl/spinner.html'")
        include ./scripts.jade
